using namespace std;


#define endl '\n'

int main(){
	
	int testcases;
	
	cin >> testcases;
	
	while (testcases--){
		
		long long int type, satisfy, sum =0, num;
		
		cin >> type >> satisfy;
		
		for(int i=0; i<type; i++){
			
			cin >> num; 
			sum += num / satisfy;
			
		}
		
		cout << sum << endl;
	}
}