#include <iostream>
#include <bits/stdc++.h> 
#include <string>
#include <algorithm>
#include <cmath>
#include <map>
#include <set>
#include <iomanip>
#include <fstream>
#include <sstream>
#include <cstdio>
#include <vector>
#include <cassert>
#include <cstdlib>

using namespace std;


int main() 
{ 
		int input;
		cin >> input;
		int x, y, z, xsum =0, ysum =0, zsum =0;
 
		
		for(int i=0; i < input; i++){
			cin >> x >> y >>z;
			xsum += x;
			ysum += y;
			zsum += z;
			}
		if(xsum == 0 && ysum ==0 && zsum ==0)
			cout << "YES" << endl;
		else 
			cout << "NO" << endl;
 
}
		
