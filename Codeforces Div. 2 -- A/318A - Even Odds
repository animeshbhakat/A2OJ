#include <iostream>
#include <bits/stdc++.h> 
#include <string>
#include <algorithm>
#include <cmath>
#include <map>
#include <set>
#include <iomanip>
#include <fstream>
#include <sstream>
#include <cstdio>
#include <vector>
#include <cassert>
#include <cstdlib>

using namespace std;


int main() {
		long long int n, k;
		cin >> n >>k;
		
		if(k <= (n+1)/2){
			cout << k*2 -1 << endl;
		}
		else{
			cout << (k - (n+1)/2) *2 << endl;
		}
}
		
