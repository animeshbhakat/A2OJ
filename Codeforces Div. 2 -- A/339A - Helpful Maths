#include <fstream>
#include <sstream>
#include <ostream>
#include <cstdio>
#include <vector>
#include <cassert>

using namespace std;

int main()
{
    //int testcases;
    //cin >> testcases;
    //while (testcases--) {
		
		string str;
		cin >> str;
		vector<char> vec;

		
		for(int i =0; i < str.length(); i++){
			if(str[i] != '+')
				vec.push_back(str[i]);
		}
		

		sort(vec.begin(), vec.end());
		
		for(int j =0; j < vec.size() - 1; j++)
			cout << vec[j] << "+";
			
			
		cout <<  vec[vec.size() - 1] << endl;
    
	
}